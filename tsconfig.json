{
  "compilerOptions": {
    "target": "ES2017",
    "outDir": "dist-ts",
    "moduleResolution": "node",
    "watch": true,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}